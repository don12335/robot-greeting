<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <title>機器人打招呼（帶名字輸入）</title>
  <style>
    :root {
      --primary-color: #ff9f1c;
      --secondary-color: #fca311;
      --bg-color: #121212;
      --text-color: #f4ede3;
      --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      --button-bg-start: #d97706;
      --button-bg-end: #fca311;
      --button-shadow: rgba(252, 163, 17, 0.5);
      --input-bg: #2c2c2c;
      --input-border: #444444;
      --input-text-color: #f4ede3;
      --input-placeholder-color: #bbb;
    }

    body {
      margin: 0;
      background-color: var(--bg-color);
      color: var(--text-color);
      font-family: var(--font-family);
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      padding: 2rem 1rem;
      box-sizing: border-box;
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
      color: var(--primary-color);
      margin-bottom: 0.5rem;
      word-break: break-word;
      padding: 0 0.5rem;
    }

    p {
      font-size: 1.25rem;
      margin-top: 0;
      margin-bottom: 1.5rem;
      color: #ddb892;
      word-break: break-word;
      padding: 0 0.5rem;
    }

    input[type="text"] {
      background-color: var(--input-bg);
      border: 1.5px solid var(--input-border);
      border-radius: 25px;
      color: var(--input-text-color);
      font-size: 1.2rem;
      padding: 0.75rem 1.5rem;
      width: 90%;
      max-width: 320px;
      outline: none;
      transition: border-color 0.3s ease;
      box-sizing: border-box;
      text-align: center;
      margin-bottom: 1rem;
    }

    input[type="text"]::placeholder {
      color: var(--input-placeholder-color);
    }

    input[type="text"]:focus {
      border-color: var(--button-bg-end);
      box-shadow: 0 0 8px var(--button-shadow);
    }

    button {
      background: linear-gradient(135deg, var(--button-bg-start), var(--button-bg-end));
      border: none;
      border-radius: 25px;
      color: white;
      font-size: 1.3rem;
      padding: 0.85rem 2.5rem;
      cursor: pointer;
      transition: background 0.3s ease;
      box-shadow: 0 4px 12px var(--button-shadow);
      user-select: none;
      margin-bottom: 1rem;
      width: 90%;
      max-width: 320px;
      box-sizing: border-box;
    }

    button:hover {
      background: linear-gradient(135deg, var(--button-bg-end), var(--button-bg-start));
      box-shadow: 0 6px 18px rgba(252, 163, 17, 0.9);
    }

    #greeting {
      margin-top: 1rem;
      font-size: 1.6rem;
      color: var(--secondary-color);
      min-height: 2rem;
      font-weight: 600;
      transition: opacity 0.5s ease;
      opacity: 0;
      padding: 0 0.5rem;
      word-break: break-word;
    }

    #greeting.show {
      opacity: 1;
    }
  </style>
</head>
<body>
  <h1>我是 don，這是我的網頁</h1>
  <p>機器人會跟你打招呼</p>
  <input type="text" id="nameInput" placeholder="請輸入你的名字" autocomplete="off" />
  <button id="sayHiBtn">跟機器人打招呼</button>
  <div id="greeting"></div>

  <script>
    const greetings = [
      "很高興見到你！🤖",
      "我是你的機器人朋友！👋",
      "讓我們一起探索吧！✨",
      "有什麼我可以幫忙的嗎？😊",
      "祝你今天愉快！🚀"
    ];

    const btn = document.getElementById('sayHiBtn');
    const greetingDiv = document.getElementById('greeting');
    const nameInput = document.getElementById('nameInput');

    function getTimeGreeting() {
      const hour = new Date().getHours();
      if (hour < 12) return "早安";
      if (hour < 18) return "午安";
      return "晚安";
    }

    function sanitizeName(name) {
      return name.replace(/[<>]/g, ''); // 防止 XSS
    }

    function speak(text) {
      
    }

    btn.addEventListener('click', () => {
      let name = sanitizeName(nameInput.value.trim());
      if (!name) {
        greetingDiv.textContent = '請先輸入你的名字喔！😊';
        greetingDiv.classList.add('show');
        return;
      }

      const index = Math.floor(Math.random() * greetings.length);
      const timeGreeting = getTimeGreeting();
      const message = `${timeGreeting}，${name}！${greetings[index]}`;

      greetingDiv.textContent = message;
      greetingDiv.classList.add('show');
      speak(message);
    });

    nameInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        btn.click();
      }
    });
  </script>
</body>
</html>

